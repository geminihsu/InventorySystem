@{
    ViewBag.Title = "Shipping FG List";
}
@model InventorySample.Models.Container
@using System.Data

<h2>Read Excel File and Display in mvc5</h2>
@using (Html.BeginForm("Index", "UploadFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    @Html.ValidationSummary();

    <label class="text-info">Upload Excel File</label>
    <input type="file" class="form-control" name="uploadfile" id="uploadfile" />
    <input type="submit" value="submit" class="btn btn-default" />

    if (Model != null)
    {
        <label class="text-info">@Model.ContainerNo</label>
        <table class="table table-responsive table-bordered">
            @foreach (var item in Model.items)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.SN)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Seq }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Seq }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Seq })
                    </td>
                </tr>
            }
        </table>
        }
    }
}